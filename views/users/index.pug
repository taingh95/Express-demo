extends ../layouts/common

block content
    a(href="/users/create") 
        button(class="btn btn-block btn-secondary my-4") Create New User

    form(action="/users/search", method="GET", class="d-flex")
        input(type="text",name="q", class="form-control, col-sm-8 ml-4")#searchInput
        button(class="btn btn-secondary col-sm-3 ml-4") Search

    table.table
        tr 
            th Name
            th Phone
            th Actions
        each user in users
            tr
                td= user.name 
                td= user.phone
                td
                    a(href='/users/' + user.id, class="btn btn-light") View
                    
    // script.js
    script(type="text/javascript").

        let inputValue = document.getElementById('searchInput')
        inputValue.value = sessionStorage.getItem("inputCurrentValue")

        inputValue.addEventListener('change', setInputValue)
        function setInputValue() {
        sessionStorage.setItem("inputCurrentValue", inputValue.value)
        }