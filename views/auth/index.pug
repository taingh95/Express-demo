extends ../layouts/common

block content
    h1 Login
    if error
        .alert.alert-danger=error
    form(action="/auth/login",method="POST")
        .form-group
            label(for="email") Email
            input#email.form-control(type="email", name="email", autofocus, value= values ? values.email : "")
        .form-group
            label(for="phone") Password
            input#password.form-control(type="password", name="password", value= values ? values.password : "")

        button.btn.btn-primary.btn-block Login